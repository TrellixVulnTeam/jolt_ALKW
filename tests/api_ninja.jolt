    def test_ldflags(self):
        """
        --- file: base.h
        int base();

        --- file: base.cpp
        int base() {{return 0;}}

        --- file: main.cpp
        #include "base.h"
        int main() {{return base();}}

        --- tasks:
        class Base(CXXLibrary):
            sources = ["base.cpp"]

        class Lib(CXXLibrary):
            arg1 = Parameter()
            arg2 = Parameter()
            shared = True
            ldflags = ["-L{{arg1}}/lib"]
            libraries = ["{{arg2}}"]
            sources = ["main.cpp"]

        class Exe(CXXExecutable):
            arg1 = Parameter()
            arg2 = Parameter()
            ldflags = ["-L{{arg1}}/lib"]
            libraries = ["{{arg2}}"]
            sources = ["main.cpp"]

        ---
        """
        r = self.jolt("build base")
        a = self.artifacts(r)
        self.jolt("build lib:arg1={p},arg2={l} exe:arg1={p},arg2={l}", p=a[0], l="base")


