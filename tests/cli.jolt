from tasks import *
import threading


class Sigint(Task):
    def run(self, deps, tools):
        try:
            cond = threading.Condition(threading.Lock())
            cond.acquire()
            cond.wait(1000)
        except KeyboardInterrupt:
            pass

class Sigint2(Task):
    def run(self, deps, tools):
        tools.run("sleep 1000")
